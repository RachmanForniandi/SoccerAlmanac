<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.socceralmanac">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.searchmatch.SearchMatchDetailActivity"></activity>
        <activity
                android:name=".ui.searchmatch.SearchMatchActivity"
                android:parentActivityName=".ui.main.MainActivity"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.lastmatch.LastMatchActivity"></activity>
        <activity android:name=".ui.nextmatch.NextMatchActivity"></activity>
        <activity
                android:name=".ui.detailMatch.MatchDetailActivity"
                android:parentActivityName=".ui.main.MainActivity"></activity>
    </application>

</manifest>